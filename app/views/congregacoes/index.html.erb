<table class="table table-sm table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
    </tr>
  </thead>
  <tbody>
    <% @congregacao.each_with_index do |cong, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= cong.nome %></td>
      </tr>
    <% end %>
  </tbody>
</table>
