<% if notice %>
  <div class="alert alert-success border-0 alert-dismissible fade show shadow shadow-sm" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger border-0 alert-dismissible fade show  shadow shadow-sm" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
